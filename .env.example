# Qwen3-TTS API Configuration
# Copy this file to .env and modify as needed

# ============================================
# API Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
MAX_CONCURRENT_REQUESTS=1
REQUEST_TIMEOUT=300

# ============================================
# Model Settings
# ============================================
# Model download source: huggingface or modelscope
MODEL_SOURCE=huggingface

# Default model to use
DEFAULT_MODEL=qwen3-tts-1.7b-base

# Directory to cache downloaded models
MODEL_CACHE_DIR=./models

# Auto-download missing models
ENABLE_AUTO_DOWNLOAD=true

# Models to preload on startup (comma-separated)
# Examples: PRELOAD_MODELS=qwen3-tts-1.7b-base
#           PRELOAD_MODELS=qwen3-tts-1.7b-base,qwen3-tts-1.7b-customvoice
PRELOAD_MODELS=

# HuggingFace token (optional, for gated models)
HF_TOKEN=

# ============================================
# Device Settings
# ============================================
# Device: auto, cuda, cpu, mps
DEVICE=auto

# Precision: bf16, fp16, fp32
PRECISION=bf16

# Attention mode: sdpa, flash_attention_2, eager, sage_attention
ATTN_MODE=sdpa

# ============================================
# Voice Storage
# ============================================
VOICE_STORAGE_DIR=./voices
MAX_VOICE_AGE_DAYS=30

# ============================================
# Audio Settings
# ============================================
DEFAULT_SAMPLE_RATE=24000
OUTPUT_SAMPLE_RATE=44100
DEFAULT_SPEED=1.0
DEFAULT_FADE_IN_MS=10
DEFAULT_FADE_OUT_MS=50

# ============================================
# File Upload Limits
# ============================================
MAX_AUDIO_FILE_SIZE=52428800

# ============================================
# Security
# ============================================
# API key for authentication (leave empty to disable)
API_KEY=

# Enable CORS
ENABLE_CORS=true
CORS_ORIGINS=["*"]

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
